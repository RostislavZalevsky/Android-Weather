<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:id="@+id/geolocation_enabled"
        android:key="geolocation_enabled"
        android:summary="Automatically obtain weather information based on my current location"
        android:title="Enable geolocation" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Odessa, Ukraine"
        android:inputType="textCapWords"
        android:key="manual_location"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Manual location" />
    <ListPreference
        android:defaultValue="C"
        android:entries="@array/pref_temperature_unit_titles"
        android:entryValues="@array/pref_temperature_unit_values"
        android:key="temperature_unit"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Temperature unit" />
</PreferenceScreen>